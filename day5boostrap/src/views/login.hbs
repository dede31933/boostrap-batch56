<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Personal Web</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/src/assests/css/startProjectHome.css" />
    <link rel="stylesheet" href="/src/assests/css/Nav.css" />

  </head>
  <body>
    <!-- nav start -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">
        <img src="/src/assests/image/logggo.png" alt="ini logo" />
      </a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/AddmyProject">Add Project</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/testimonial">Testimonial</a>
          </li>
        </ul>
        <div class="d-flex ms-auto">
          <a href="/contact" class="btn btn-gray btn-spacing">Contact Me</a>
          {{#if isLogin}}
            <p class="mb-0 me-3">Welcome, {{user.name}}</p>
            <a href="/logout" class="btn btn-gray btn-spacing">Logout</a>
          {{else}}
            <a href="/login" class="btn btn-gray btn-spacing">Login</a>
            <a href="/register" class="btn btn-gray btn-spacing">Register</a>
          {{/if}}
        </div>
      </div>
    </nav>
    <!-- Navbar End -->

    <!-- Login Form -->
    <div class="container d-flex justify-content-center">
      <div class="w-50">
        <h3 class="mt-5">LOGIN</h3>
        {{#if messages.danger}}
          <div class="alert alert-danger" role="alert">
            <div class="container">
              {{messages.danger}}
            </div>
          </div>
        {{/if}}
        <form action="/login" method="POST">
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input
              type="email"
              name="email"
              class="form-control"
              id="email"
              required
            />
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input
              type="password"
              name="password"
              class="form-control"
              id="password"
              required
            />
          </div>
          <button type="submit" class="btn btn-danger mt-3 px-5">Submit</button>
        </form>
      </div>
    </div>
    <!-- Login Form End -->

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>